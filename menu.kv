<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size : self.size
    Label:
        font_size : dp(50)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_title
        pos_hint : { "center_x":.5 , "center_y":.6}

    Button:
        font_size : dp(25)
        font_name: 'fonts/Eurostile.ttf'
        text : root.parent.btn_title
        pos_hint: {"center_x":.5, "center_y":.3}
        size_hint : .2 , .15
        on_press : root.parent.on_btn_press()
        background_normal : ''
        background_color : '#6a5acd'